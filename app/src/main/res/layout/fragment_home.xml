<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8C8C8"
    tools:context=".ui.home.HomeFragment">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_fragment" />

  <androidx.cardview.widget.CardView
      android:layout_marginTop="8dp"
      android:id="@+id/cardView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="16dp"
      app:layout_constraintTop_toBottomOf="@+id/include"
      app:cardCornerRadius="40dp">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />
      <LinearLayout
          android:id="@+id/sliderDots"
          android:orientation="horizontal"
          android:gravity="center_vertical|center_horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          />
  </androidx.cardview.widget.CardView>

      <LinearLayout
          android:layout_marginTop="10dp"
          android:id="@+id/map_button"
          app:layout_constraintTop_toBottomOf="@+id/cardView"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
              android:id="@+id/place_selected"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:text="Riga"
              android:textSize="20dp"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="@color/black"
              android:layout_marginEnd="200dp"
              android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
              android:layout_weight="1"

              />

          <TextView
              android:id="@+id/open_map"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:gravity="center"
              android:textColor="@color/black"
              android:padding="4dp"
              android:layout_weight="1"
              android:background="@drawable/open_map_container"
              android:drawableLeft="@drawable/ic_baseline_open_in_full_24"
              android:text="@string/open_map"
              />

      </LinearLayout>

      <fragment
          android:layout_marginTop="5dp"
          android:id="@+id/googleMap"
          android:name="com.google.android.gms.maps.SupportMapFragment"
          android:layout_width="match_parent"
          android:layout_height="150dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/map_button" />

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/listView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/googleMap"
          >

          </androidx.recyclerview.widget.RecyclerView>


  </androidx.constraintlayout.widget.ConstraintLayout>